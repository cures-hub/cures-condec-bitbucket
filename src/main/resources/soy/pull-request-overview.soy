{namespace condec.todo}

/**
 * @param objects
 *
 */
{template .knowledgeElements}

    <div class="todo-list">

        {foreach $issueArray in $objects}
    <table class="aui aui-table-sortable">
    <thead>
        <tr>
        <th class="aui-table-column-issue-key">Key</th>
        <th>Summary</th>
        <th>Description</th>
        <th>Type</th>
        </tr>
    </thead>
    <tbody>
            {foreach $issue in $issueArray}
            <tr>
                <td><a target="_blank" href="{$issue.url}">{$issue.key}</a></td>
                <td>{$issue.summary}</td>
                <td>{$issue.description}</td>
                <td>{$issue.type}</td>
            </tr>
            {/foreach}
    </tbody>
    </table>
        {ifempty}
        <h4>loading...</h4>

        {/foreach}
    </div>
{/template}
